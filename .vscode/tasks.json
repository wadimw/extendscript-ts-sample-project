{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "tsc: build",
			"group": "build",
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"label": "browserify: bundle",
			"group": "build",
			"type": "shell",
			"command": "npx browserify build/index.js -o build/bundled/app.js",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "jsxbin: compile to binary",
			"group": "build",
			"type": "shell",
			"command": "npx jsxbin -i build/bundled/app.js -o build/bundled/app.jsxbin",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "clean build folder",
			"group": "none",
			"type": "shell",
			"command": "rm -fr ./build",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "rebuild all",
			"dependsOrder": "sequence",
			"dependsOn": [
				"clean build folder",
				"tsc: build",
				"browserify: bundle",
				"jsxbin: compile to binary"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}